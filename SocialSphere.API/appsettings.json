{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://localhost:8081"
        }
      }
    ]
  },
  "Notifications": {
    "Sendgrid": {
      "FromEmail": "your-email@domain.com",
      "FromName": "SendGrid test user"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=.;Initial Catalog=SocialSphere;Integrated Security=True;TrustServerCertificate=True;"
  },
  "WebApiName": "socialSphereAPI",
  "IdentityServerUrl": "https://localhost:5001"
}
